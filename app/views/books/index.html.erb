<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>

    <% if !current_user.books.include?(book) %>
      <p>
        <%= link_to "Start this book!", book %>
      </p>
    <% else %>
      <p>
        <%= link_to "Continue this book!", book %>
      </p>
    <% end %>

  <% end %>
</div>

<%= link_to "New book", new_book_path %>
