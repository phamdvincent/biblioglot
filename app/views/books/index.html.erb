<p style="color: green"><%= notice %></p>
<a href="/" class="back">Back to homepage</a>
<p class="title header">Spanish Books</p>

<div id="books" >

  <% @books.each do |book| %>
    <div class="card center card-spacing" style="width: 20rem; ">
      <div class="card-body" >
        <h5 class="card-title" style="font-size: 30px;"><%= book.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted" ><em>by <%= book.author %>, <%= book.publication_year %></em></h6>
        <% if !current_user.books.include?(book) %>
          <p>
            <%= link_to "Start this book!", book %>
          </p>
        <% else %>
          <p>
            <%= link_to "Continue this book!", book %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>

</div>

<%= link_to "New book", new_book_path %>
